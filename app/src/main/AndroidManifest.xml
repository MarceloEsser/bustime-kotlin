<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        package="esser.marcelo.busoclock">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
            android:name=".MyApplication"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true"
            tools:ignore="GoogleAppIndexingWarning"
            tools:targetApi="m">

        <activity android:name=".view.activity.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.favorite.FavoriteSchedulesAcitivty" />
        <activity android:name=".view.activity.favorite.FavoriteLinesActivity" />
        <activity android:name=".view.activity.favorite.FavoriteItinerariesActivity" />
        <activity android:name=".view.activity.vicasa.VicasaSchedulesActivity" />
        <activity android:name=".view.activity.sogal.SogalItinerariesActivity" />
        <activity android:name=".view.activity.sogal.SogalLinesActivity" />
        <activity android:name=".view.activity.sogal.SogalSchedulesActivity" />
        <activity android:name=".view.activity.vicasa.VicasaLinesActivity" />

    </application>

</manifest>