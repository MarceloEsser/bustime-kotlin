<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RowLineStyle">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/ripple_lines</item>
        <item name="android:elevation">3dp</item>
    </style>

    <style name="TabBarStyle">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="TitleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HomeCardStyle">
        <item name="android:background">@drawable/background_white_ripple_grey</item>
        <item name="android:elevation">6dp</item>
    </style>

    <style name="HomeCardContentStyle">
        <item name="android:layout_margin">15dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:background">@drawable/background_spinner</item>
    </style>

</resources>
