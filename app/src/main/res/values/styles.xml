<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RowLineStyle">
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/ripple_lines</item>
        <item name="android:elevation">3dp</item>
    </style>

    <style name="CardStyle">
        <item name="android:background">@color/white</item>
        <item name="android:elevation">6dp</item>
    </style>

    <style name="RowLineDescriptionStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="RowLineCodeStyle">
    <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="AboutTitleStyle">
    <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/grey600</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
    </style>

    <style name="TabBarStyle">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="TitleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:fontFamily">@font/ubuntu_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/background_spinner</item>
    </style>

    <style name="HomeCardButtonTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
    </style>

    <style name="HomeCardContentStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>
    <style name="HomeCardSubcontentStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ubuntu_regular</item>
    </style>
        <style name="HomeCardSubcontentHeaderStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
    </style>

    <style name="HomeCardStyleBlue">
        <item name="android:paddingEnd">30dp</item>
        <item name="android:background">@drawable/background_blue_ripple_whit</item>
        <item name="android:elevation">6dp</item>
    </style>
    <style name="HomeCardStyleGreen">
        <item name="android:paddingEnd">30dp</item>
        <item name="android:background">@drawable/background_green_ripple_white</item>
        <item name="android:elevation">6dp</item>
    </style>

</resources>
