<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey100"
        tools:context=".vvm.home.HomeActivity">

    <android.support.constraint.ConstraintLayout
            android:id="@+id/home_toolbar"
            style="@style/TabBarStyle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:elevation="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:id="@+id/activity_home_title"
                style="@style/TitleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_title"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
                android:id="@+id/lines_activity_img_btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/icon_back"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.v4.widget.NestedScrollView
            app:layout_constraintTop_toBottomOf="@+id/home_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="0dp"
            android:layout_width="0dp">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".vvm.home.HomeActivity">


            <android.support.constraint.ConstraintLayout
                    style="@style/HomeCardStyleBlue"
                    android:layout_margin="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/cv_home_activity_vicasa"
                    android:layout_width="0dp"
                    android:layout_height="100dp">

                <TextView
                        style="@style/HomeCardSubcontentHeaderStyle"
                        android:text="@string/contacts"
                        android:id="@+id/vicasa_contats_header"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/vicasa_phone"
                        android:text="@string/vicasa_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        style="@style/HomeCardSubcontentStyle"
                        app:layout_constraintTop_toBottomOf="@id/vicasa_contats_header"
                        app:layout_constraintStart_toStartOf="@+id/vicasa_contats_header"/>

                <TextView
                        style="@style/HomeCardButtonTextStyle"
                        android:text="Vicasa"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:id="@+id/vicasa_card_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                    style="@style/HomeCardStyleGreen"
                    android:layout_margin="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/cv_home_activity_vicasa"
                    android:id="@+id/cv_home_activity_sogal"
                    android:layout_width="0dp"
                    android:layout_height="100dp">

                <TextView
                        style="@style/HomeCardSubcontentHeaderStyle"
                        android:text="@string/contacts"
                        android:id="@+id/contats_header"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/sogal_wpp"
                        android:text="@string/sogal_wpp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        style="@style/HomeCardSubcontentStyle"
                        app:layout_constraintTop_toBottomOf="@id/contats_header"
                        app:layout_constraintStart_toStartOf="@+id/contats_header"/>

                <TextView
                        android:text="@string/sogal_residential_phone"
                        style="@style/HomeCardSubcontentStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@+id/contats_header"
                        app:layout_constraintTop_toBottomOf="@+id/sogal_wpp"
                        android:layout_marginTop="10dp"/>

                <TextView
                        style="@style/HomeCardButtonTextStyle"
                        android:text="Sogal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:id="@+id/sogal_card_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </android.support.constraint.ConstraintLayout>

            <View
                    android:id="@+id/divider"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/grey400"
                    app:layout_constraintStart_toStartOf="@id/cv_home_activity_sogal"
                    app:layout_constraintTop_toBottomOf="@+id/cv_home_activity_sogal"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>


            <TextView
                    android:layout_marginTop="20dp"
                    style="@style/AboutTitleStyle"
                    app:layout_constraintStart_toStartOf="@id/cv_home_activity_sogal"
                    app:layout_constraintTop_toBottomOf="@+id/divider"
                    android:text="@string/about"
                    android:id="@+id/about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <android.support.v7.widget.CardView
                    style="@style/CardStyle"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/about"
                    app:layout_constraintStart_toStartOf="@+id/about"
                    app:layout_constraintEnd_toEndOf="@id/cv_home_activity_sogal"
                    android:id="@+id/firstCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                <TextView
                        style="@style/HomeCardContentStyle"
                        android:layout_margin="15dp"
                        android:text="@string/about_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </android.support.v7.widget.CardView>

            <TextView
                    android:layout_marginTop="20dp"
                    style="@style/AboutTitleStyle"
                    app:layout_constraintStart_toStartOf="@id/firstCard"
                    app:layout_constraintTop_toBottomOf="@+id/firstCard"
                    android:text="@string/marcelo_esser"
                    android:id="@+id/contacts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <android.support.v7.widget.CardView
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="15dp"
                    style="@style/CardStyle"
                    app:layout_constraintTop_toBottomOf="@+id/contacts"
                    app:layout_constraintStart_toStartOf="@+id/contacts"
                    app:layout_constraintEnd_toEndOf="@id/cv_home_activity_sogal"
                    android:id="@+id/secondCard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            style="@style/HomeCardContentStyle"
                            android:text="@string/github_profile"
                            android:layout_marginStart="10dp"
                            app:layout_constraintBottom_toBottomOf="@id/home_activity_img_github_logo"
                            app:layout_constraintTop_toTopOf="@id/home_activity_img_github_logo"
                            app:layout_constraintStart_toEndOf="@id/home_activity_img_github_logo"
                            android:id="@+id/home_activity_tv_github_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <ImageView
                            android:id="@+id/home_activity_img_github_logo"
                            android:src="@drawable/ic_github_logo"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="15dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_width="32dp"
                            android:layout_height="32dp"/>

                    <TextView
                            style="@style/HomeCardContentStyle"
                            android:text="@string/gmail_profile"
                            android:layout_marginStart="10dp"
                            app:layout_constraintBottom_toBottomOf="@id/home_activity_img_gmail_logo"
                            app:layout_constraintTop_toTopOf="@id/home_activity_img_gmail_logo"
                            app:layout_constraintStart_toEndOf="@id/home_activity_img_gmail_logo"
                            android:id="@+id/home_activity_tv_gmail_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <ImageView
                            android:id="@+id/home_activity_img_gmail_logo"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/ic_gmail_logo"
                            app:layout_constraintStart_toStartOf="@id/home_activity_img_github_logo"
                            app:layout_constraintTop_toBottomOf="@id/home_activity_img_github_logo" />

                    <TextView
                            style="@style/HomeCardContentStyle"
                            android:text="@string/linkedin_profile"
                            android:layout_marginStart="10dp"
                            app:layout_constraintBottom_toBottomOf="@id/home_activity_img_linkedin_logo"
                            app:layout_constraintTop_toTopOf="@id/home_activity_img_linkedin_logo"
                            app:layout_constraintStart_toEndOf="@id/home_activity_img_linkedin_logo"
                            android:id="@+id/home_activity_tv_linkedin_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <ImageView
                            android:id="@+id/home_activity_img_linkedin_logo"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:src="@drawable/ic_linkedin_logo"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@id/home_activity_img_gmail_logo"
                            app:layout_constraintTop_toBottomOf="@id/home_activity_img_gmail_logo" />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>


            <TextView
                    android:layout_marginTop="30dp"
                    style="@style/AboutTitleStyle"
                    app:layout_constraintStart_toStartOf="@id/secondCard"
                    app:layout_constraintTop_toBottomOf="@+id/secondCard"
                    android:text="@string/lucas_wottrich"
                    android:id="@+id/lucas_wottrich"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            <android.support.v7.widget.CardView
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="30dp"
                    style="@style/CardStyle"
                    app:layout_constraintTop_toBottomOf="@id/lucas_wottrich"
                    app:layout_constraintStart_toStartOf="@id/lucas_wottrich"
                    app:layout_constraintEnd_toEndOf="@id/cv_home_activity_sogal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/lucas_wottrich_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            style="@style/HomeCardContentStyle"
                            android:text="@string/github_profile_wottrich"
                            android:layout_marginStart="10dp"
                            app:layout_constraintBottom_toBottomOf="@id/home_activity_img_github_logo_wottrich"
                            app:layout_constraintTop_toTopOf="@id/home_activity_img_github_logo_wottrich"
                            app:layout_constraintStart_toEndOf="@id/home_activity_img_github_logo_wottrich"
                            android:id="@+id/home_activity_tv_github_description_wottrich"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <ImageView
                            android:id="@+id/home_activity_img_github_logo_wottrich"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/ic_github_logo"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                            style="@style/HomeCardContentStyle"
                            android:text="@string/gmail_profile_wottrich"
                            android:layout_marginStart="10dp"
                            app:layout_constraintBottom_toBottomOf="@id/home_activity_img_gmail_logo_wottrich"
                            app:layout_constraintTop_toTopOf="@id/home_activity_img_gmail_logo_wottrich"
                            app:layout_constraintStart_toEndOf="@id/home_activity_img_gmail_logo_wottrich"
                            android:id="@+id/home_activity_tv_gmail_description_wottrich"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <ImageView
                            android:id="@+id/home_activity_img_gmail_logo_wottrich"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/ic_gmail_logo"
                            app:layout_constraintStart_toStartOf="@id/home_activity_img_github_logo_wottrich"
                            app:layout_constraintTop_toBottomOf="@id/home_activity_img_github_logo_wottrich" />

                    <TextView
                            style="@style/HomeCardContentStyle"
                            android:text="@string/linkedin_profile_wottrich"
                            android:layout_marginStart="10dp"
                            app:layout_constraintBottom_toBottomOf="@id/home_activity_img_linkedin_logo_wottrich"
                            app:layout_constraintTop_toTopOf="@id/home_activity_img_linkedin_logo_wottrich"
                            app:layout_constraintStart_toEndOf="@id/home_activity_img_linkedin_logo_wottrich"
                            android:id="@+id/home_activity_tv_linkedin_description_wottrich"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    <ImageView
                            android:id="@+id/home_activity_img_linkedin_logo_wottrich"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="15dp"
                            android:src="@drawable/ic_linkedin_logo"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@id/home_activity_img_gmail_logo_wottrich"
                            app:layout_constraintTop_toBottomOf="@id/home_activity_img_gmail_logo_wottrich" />
                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>


        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>