<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@color/grey100"
        android:padding="20dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

    <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="Mathias velho"
            android:id="@+id/tv_line_menu_dialog_line_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="12345"
            app:layout_constraintTop_toBottomOf="@id/tv_line_menu_dialog_line_name"
            android:id="@+id/tv_line_menu_dialog_line_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="Centro Bairro"
            app:layout_constraintTop_toBottomOf="@id/tv_line_menu_dialog_line_code"
            android:id="@+id/tv_line_menu_dialog_line_way"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <View
            android:layout_marginTop="5dp"
            android:background="@color/grey300"
            app:layout_constraintTop_toBottomOf="@id/tv_line_menu_dialog_line_way"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    <TextView
            android:text="Linha salva"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_line_menu_dialog_line_way"
            android:id="@+id/tv_line_menu_dialog_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <com.airbnb.lottie.LottieAnimationView
            app:lottie_fileName="radiobutton.json"
            android:layout_width="128dp"
            android:layout_height="64dp"
            android:paddingEnd="-65dp"
            app:layout_constraintTop_toTopOf="@+id/tv_line_menu_dialog_favorite"
            app:layout_constraintBottom_toBottomOf="@+id/tv_line_menu_dialog_favorite"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/lottie_animation_view_radio_button"/>

    <Button
            android:layout_marginTop="20dp"
            android:text="Horários"
            android:textAllCaps="false"
            android:background="@drawable/background_white_ripple_grey"
            android:id="@+id/btn_line_menu_dialog_schedules"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lottie_animation_view_radio_button"
            android:layout_width="match_parent"
            android:layout_height="49dp"/>

    <Button
            android:id="@+id/btn_line_menu_dialog_itineraries"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Itinerários"
            android:textAllCaps="false"
            android:background="@drawable/background_white_ripple_grey"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_line_menu_dialog_schedules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>


</android.support.constraint.ConstraintLayout>