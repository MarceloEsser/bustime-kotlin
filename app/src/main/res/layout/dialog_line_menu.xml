<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

    <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/ubuntu_medium"
            tools:text="Mathias velho"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/tv_line_menu_dialog_line_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="14sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:fontFamily="@font/ubuntu_regular"
            tools:text="12345"
            app:layout_constraintTop_toBottomOf="@id/tv_line_menu_dialog_line_name"
            android:id="@+id/tv_line_menu_dialog_line_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/grey300"
            app:layout_constraintTop_toBottomOf="@id/tv_line_menu_dialog_line_code"
            tools:layout_editor_absoluteX="20dp" />

    <TextView
            android:id="@+id/tv_menu_dialog_select_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/ubuntu_medium"
            android:text="@string/line_way"
            android:textColor="@color/grey900"
            app:layout_constraintStart_toStartOf="@+id/tv_line_menu_dialog_line_code"
            app:layout_constraintTop_toBottomOf="@id/tv_line_menu_dialog_line_code" />

    <Spinner
            android:id="@+id/sp_menu_dialog_select_way"
            style="@style/SpinnerStyle"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toEndOf="@+id/btn_line_menu_dialog_schedules"
            app:layout_constraintStart_toStartOf="@+id/btn_line_menu_dialog_schedules"
            app:layout_constraintTop_toBottomOf="@+id/tv_menu_dialog_select_way" />

    <ImageView
            app:layout_constraintBottom_toBottomOf="@+id/sp_menu_dialog_select_way"
            app:layout_constraintTop_toTopOf="@+id/sp_menu_dialog_select_way"
            app:layout_constraintEnd_toEndOf="@id/sp_menu_dialog_select_way"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_arrow_drop_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <Button
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/schedules"
            android:textAllCaps="false"
            android:background="@drawable/background_white_ripple_grey"
            android:id="@+id/btn_line_menu_dialog_schedules"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="14sp"
            android:fontFamily="@font/ubuntu_medium"
            app:layout_constraintTop_toBottomOf="@id/sp_menu_dialog_select_way"
            app:layout_constraintBottom_toTopOf="@id/btn_line_menu_dialog_itineraries"
            android:layout_width="match_parent"
            android:layout_height="55dp"/>

    <Button
            android:id="@+id/btn_line_menu_dialog_itineraries"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/itineraries"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:fontFamily="@font/ubuntu_medium"
            android:background="@drawable/background_white_ripple_grey"
            android:layout_margin="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>