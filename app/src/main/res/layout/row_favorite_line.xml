<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:focusable="true"
        style="@style/RowLineStyle"
        android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_line_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            style="@style/RowLineDescriptionStyle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="nome da linha"
            app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_line_way"
            style="@style/RowLineCodeStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:text="sentido da linha"
            app:layout_constraintStart_toStartOf="@+id/tv_line_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_line_name" />

    <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_line_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="numero da linha"
            android:layout_margin="10dp"
            style="@style/RowLineCodeStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_line_sogal_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Sogal"
            android:layout_margin="10dp"
            android:visibility="gone"
            style="@style/RowLineSogalCompanyStyle"
            app:layout_constraintTop_toBottomOf="@id/tv_line_way"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:id="@+id/tv_line_vicasa_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Vicasa"
            android:layout_margin="10dp"
            style="@style/RowLineVicasaCompanyStyle"
            app:layout_constraintTop_toBottomOf="@id/tv_line_way"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>